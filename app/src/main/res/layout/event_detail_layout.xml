<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@mipmap/rounded_rectangle"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.aipxperts.ecountdown.Widget.TextView_Regular
                android:id="@+id/txt_date"
                style="@style/Text_regular_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="sunday,16 july 2017"
                android:textSize="15sp" />

            <com.aipxperts.ecountdown.Widget.TextView_Regular
                style="@style/Text_regular_font"
                android:id="@+id/txt_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <com.aipxperts.ecountdown.Widget.TextView_Regular
                style="@style/Text_regular_font"
                android:id="@+id/txt_remain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:text="Days Until"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</layout>
