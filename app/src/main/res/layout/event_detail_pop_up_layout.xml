<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:background="#ffffff"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <ImageView android:id="@+id/img_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/event_share"
                />
            <com.aipxperts.ecountdown.Widget.TextView_Regular
                android:id="@+id/txt_event_share"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="Share"
                android:textColor="#000000"
                android:textSize="21sp" />

        </LinearLayout>

        <View android:id="@+id/v1"
            android:layout_width="90dp"
            android:layout_height="0.1dp"
            android:layout_marginTop="7dp"
            android:background="#ffffff"
            ></View>
        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <ImageView android:id="@+id/img_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/event_edit"
                />
            <com.aipxperts.ecountdown.Widget.TextView_Regular
                android:id="@+id/txt_event_edit"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="Edit"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="21sp" />

        </LinearLayout>

        <View android:id="@+id/v2"
            android:layout_width="90dp"
            android:layout_height="0.1dp"
            android:layout_marginTop="7dp"
            android:background="#ffffff"
            ></View>
        <LinearLayout
            android:id="@+id/ll_delete"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <ImageView android:id="@+id/img_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/delete_event"
                />
            <com.aipxperts.ecountdown.Widget.TextView_Regular
                android:id="@+id/txt_event_delete"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="Delete"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="21sp" />

        </LinearLayout>

        <View android:id="@+id/v3"
            android:layout_width="90dp"
            android:layout_height="0.1dp"
            android:layout_marginTop="7dp"
            android:background="#ffffff"
            ></View>
    </LinearLayout>
</layout>