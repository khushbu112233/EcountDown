<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/ll1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="145dp">
            <ImageView
                android:id="@+id/mProfileImg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/remove_ads"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <com.aipxperts.ecountdown.Widget.TextView_Regular
            android:id="@+id/txt_remove_ads"
            style="@style/Text_regular_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="90dp"
            android:textColor="#ffffff"
            android:background="@mipmap/restore_purchase"
            android:text="REMOVE ADS"
            android:textSize="19sp" />
        <com.aipxperts.ecountdown.Widget.TextView_Regular
            android:id="@+id/txt_restore"
            style="@style/Text_regular_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            android:textColor="#ffffff"
            android:background="@mipmap/restore_purchase"
            android:text="RESTORE PURCHASE"
            android:textSize="19sp" />
    </RelativeLayout>
</layout>