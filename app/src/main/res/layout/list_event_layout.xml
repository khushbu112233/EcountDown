<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
>
<com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp"
        >

        <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="4dp"
            android:tag="bottom3"
            android:background="@mipmap/swipe_bg"
            android:weightSum="1">
            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="0dp"
                android:layout_weight="0.23"
                android:layout_height="25dp"
                android:src="@mipmap/edit"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/img_share"
                android:layout_width="0dp"
                android:layout_weight="0.23"
                android:layout_height="25dp"
                android:src="@mipmap/share"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="0dp"
                android:layout_weight="0.23"
                android:layout_height="25dp"
                android:src="@mipmap/delete"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.30"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_event_photo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/app_icon"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/feedbg"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_event_photo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/app_icon"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.80"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <com.aipxperts.ecountdown.Widget.TextView_Bold
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.10"
                    style="@style/Text_bold_font"/>
                <com.aipxperts.ecountdown.Widget.TextView_Bold
                    android:id="@+id/txt_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.29"
                    android:text="mount abu"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textSize="19sp"
                    style="@style/Text_bold_font"/>
                <com.aipxperts.ecountdown.Widget.TextView_Regular
                    android:id="@+id/txt_event_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="Sunday,16 july 2017"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    style="@style/Text_regular_font"/>

                <com.aipxperts.ecountdown.Widget.TextView_Regular
                    android:id="@+id/txt_event_count_down"
                    style="@style/Text_regular_font"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:text="23 days 11 hours 5 minutes until" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.20"
                android:gravity="top"
                android:visibility="gone"
                android:orientation="vertical">

                <com.aipxperts.ecountdown.Widget.TextView_Regular
                    android:id="@+id/txt_time"
                    style="@style/Text_regular_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:30 p.m." />
            </LinearLayout>
        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout></layout>