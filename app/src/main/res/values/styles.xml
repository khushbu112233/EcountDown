<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>
    <style name="Text_regular_font" parent="android:Widget.TextView">
        <item name="android:textColor">#626262</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Text_regular_font1" parent="android:Widget.TextView">
        <item name="android:textColor">#626262</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Text_bold_font" parent="android:Widget.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--  prefix 80 means 50% opacity-->
    <style name="edit_style" parent="android:Widget.EditText">
        <item name="android:textColor">#4d606f</item>
        <item name="android:textColorHint">#804d606f</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:gravity">left|center_vertical</item>>
    </style>
    <style name="edit_style1" parent="android:Widget.EditText">
        <item name="android:textColor">#4d606f</item>
        <item name="android:textColorHint">#804d606f</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">left|center_vertical</item>>
    </style>
    <style name="edit_style_like_text" parent="android:Widget.TextView">
        <item name="android:textColor">#804d606f</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">left|center_vertical</item>>
    </style>
    <style name="edit_style2" parent="android:Widget.EditText">
        <item name="android:textColor">#4d606f</item>
        <item name="android:textColorHint">#804d606f</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">left|center_vertical</item>>
    </style>
    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/animation_on</item>
        <item name="android:windowExitAnimation">@anim/animation_off</item>
    </style>

</resources>
